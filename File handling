

import os

def write_file():
    with open("data.txt", "w") as f:
        text = input("Enter text to write into the file: ")
        f.write(text + "\n")
    print("File created and data written successfully.\n")

def read_file():
    try:
        with open("data.txt", "r") as f:
            print("\n File Content:\n")
            print(f.read())
    except File Not Found Error:
        print(" File not found. Please write data first.\n")

def append_file():
    try:
        with open("data.txt", "a") as f:
            text = input("Enter text to append to the file: ")
            f.write(text + "\n")
        print(" Data appended successfully.\n")
    except File Not Found Error:
        print("File not found. Please create/write first.\n")

def delete_file():
    if os.path.exists("data.txt"):
        os.remove("data.txt")
        print(" File deleted successfully.\n")
    else:
        print(" File does not exist.\n")


while True:
    print("FILE HANDLING MENU")
    print("1. Write (Create a new file)")
    print("2. Read (Display file content)")
    print("3. Append (Add more data)")
    print("4. Delete (Remove the file)")
    print("5. Exit")
    
    choice = input("Enter your choice (1-5): ")

    if choice == '1':
        write_file()
    elif choice == '2':
        read_file()
    elif choice == '3':
        append_file()
    elif choice == '4':
        delete_file()
    elif choice == '5':
        print(" Exit program.")
        break
    else:
        print(" Invalid choice. Please try again.\n")
